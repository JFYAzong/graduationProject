.container .switcher {
  padding-left: 500rpx;
  height: 40rpx;
  width: 260rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.container .switcher__item {
  width: 120rpx;
  height: 40rpx;
  font-size: 25rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: black;
  opacity: 0.6;
  cursor: pointer;
  text-align: center;
  line-height: 30rpx;
}
.container .switcher__item-active {
  opacity: 1;
  background: url(data:image/png;base64,);
  height: 40rpx;
  width: 120rpx;
}
.container .wrap {
  padding: 30rpx;
}
.container .wrap .row {
  border-bottom: 1px dotted #efefef;
  padding: 15rpx 0;
